{
  "extends": "../../tsconfig.json",
  "include": ["**/*.ts"],
  "exclude": ["jest.config.ts", "**/dist", "*.test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "rootDir": "src",
    "target": "es2020",
    "preserveConstEnums": true,
    "sourceMap": true,
    "module": "es2020",
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true
  }
}
